{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make All",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc" // Or appropriate compiler error matcher
            ]
        },
        {
            "label": "Make Install",
            "type": "shell",
            "command": "make",
            "args": [
                "install"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
